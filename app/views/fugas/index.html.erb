<p id="notice"><%= notice %></p>

<h1>Fugas</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @fugas.each do |fuga| %>
      <tr>
        <td><%= link_to 'Show', fuga %></td>
        <td><%= link_to 'Edit', edit_fuga_path(fuga) %></td>
        <td><%= link_to 'Destroy', fuga, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

